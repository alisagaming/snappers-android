<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/root"
              android:background="@drawable/background"
              android:padding="10dp"
              android:orientation="vertical"
        >
    <com.emerginggames.snappers.view.OutlinedTextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="@string/moreGames"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        app:strokeColor="#000"
        app:strokeWidth="1dp"
        android:gravity="center"
        android:textColor="#fff"
            />

    <ListView
            android:id="@+id/list"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/title"
            android:layout_above="@+id/backButton"
            android:layout_marginBottom="5dp"
            android:background="#00000000"
            />

    <ImageView android:id="@+id/backButton" android:layout_width="50dp" android:layout_height="wrap_content"
               android:src="@drawable/arrow_back_btn"
               android:scaleType="fitCenter"
               android:onClick="onBackButtonClick"
               android:adjustViewBounds="true"
               android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
            />

</RelativeLayout>