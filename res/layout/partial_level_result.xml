<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" android:orientation="vertical">
    <com.emerginggames.snappers.view.OutlinedTextView android:id="@+id/title"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:textColor="@android:color/white" android:layout_gravity="center"
                app:strokeWidth="1dp" app:strokeColor="#000"/>
    <com.emerginggames.snappers.view.OutlinedTextView android:id="@+id/message"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:textColor="@android:color/white" android:layout_gravity="center"
                 app:strokeWidth="1dp" app:strokeColor="#000"/>
</LinearLayout>