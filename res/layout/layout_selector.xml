<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/background"
              android:id="@+id/root"
              android:orientation="vertical"
        >

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/resLoadIndicator" android:layout_height="5dp" android:layout_width="5dp"
                      android:background="#80FF0000" android:visibility="gone"
                />

        <LinearLayout android:id="@+id/bgLoadIndicator" android:layout_height="5dp" android:layout_width="5dp"
                      android:background="#80FF0000" android:visibility="gone"
                />

        <com.emerginggames.snappers.view.OutlinedTextView android:id="@+id/score"
                                                         android:layout_height="wrap_content"
                                                         android:layout_width="fill_parent"
                                                         android:gravity="top|right"
                                                         android:textColor="#FFFFFFFF" android:textSize="30dp"
                                                         android:paddingRight="5dp" android:paddingTop="5dp"
                                                         android:layout_weight="1"
                                                         app:strokeWidth="1dp" app:strokeColor="#000"
                                                         android:text="Score:"
                />

    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="0dp" android:layout_weight="1">
        <com.emerginggames.snappers.view.FixedRatioPager android:id="@+id/pager"
                                                        android:layout_height="fill_parent" android:layout_width="fill_parent"
                                                        android:layout_gravity="center"
                />

    </LinearLayout>

    <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            app:radius="5dp"
            app:fillColor="#FFFFFF"
            app:pageColor="#444444"
            app:strokeWidth="0dp"
            app:snap="true"
            />

    <RelativeLayout android:id="@+id/footer"
                  android:layout_width="fill_parent" android:layout_height="wrap_content"
                  android:layout_gravity="bottom">

        <com.emerginggames.snappers.view.ImageView android:id="@+id/backButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/arrow_back_btn"
                   android:layout_alignParentLeft="true"
                   android:scaleType="fitCenter"
                   android:onClick="onBackButtonClick"
                   android:adjustViewBounds="true"/>

        <com.emerginggames.snappers.view.ImageView android:id="@+id/moreGamesButton" android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/button_moregames"
                   android:layout_alignParentRight="true"
                   android:scaleType="fitEnd"
                   android:onClick="onMoreGamesButtonClick"
                   android:adjustViewBounds="true"/>

    </RelativeLayout>

</LinearLayout>
