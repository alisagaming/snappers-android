<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers2"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        >

    <com.emrg.view.OutlinedTextView android:id="@+id/levelInfo"
                     android:layout_width="wrap_content" android:layout_height="wrap_content"
                     android:textColor="@android:color/white" android:layout_gravity="left"
                     app:strokeWidth="1dp" app:strokeColor="#000"/>
    <com.emrg.view.OutlinedTextView android:id="@+id/tapsLeft"
                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:textColor="@android:color/white" android:layout_gravity="left"
                 app:strokeWidth="1dp" app:strokeColor="#000"/>

</LinearLayout>