<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:and="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/ru.emerginggames.snappers"
              and:layout_width="fill_parent"
              and:layout_height="fill_parent"
        >

    <ru.emerginggames.snappers.view.ImageView and:id="@+id/bgImage"
            and:layout_width="fill_parent" and:layout_height="fill_parent" and:layout_centerInParent="true"
            and:src="@drawable/bg1" and:scaleType="matrix"/>

    <ru.emerginggames.snappers.view.OutlinedTextView and:id="@+id/message"
            and:layout_width="wrap_content" and:layout_height="wrap_content"
            and:text="Loading..." and:textSize="40dp" and:layout_alignParentBottom="true"
            and:layout_centerHorizontal="true" and:layout_margin="20dp" and:textColor="@android:color/white"
            app:strokeWidth="3dp" app:strokeColor="#000" and:gravity="center"
            />

</RelativeLayout>