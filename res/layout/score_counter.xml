<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


<RelativeLayout android:id="@+id/bar_back" android:layout_width="200dp" android:layout_height="50dp"
                android:background="@drawable/xp_bar"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
        >
    <LinearLayout android:layout_width="100dp" android:layout_height="fill_parent" android:id="@+id/inner">
        <View android:id="@+id/bar_fill" android:layout_width="200dp" android:layout_height="fill_parent"
              android:background="@drawable/xp_bar_fill"/>
    </LinearLayout>
    <com.emrg.view.OutlinedTextView android:id="@+id/score"
                                                     android:layout_width="fill_parent" android:layout_height="wrap_content"
                                                     android:layout_centerInParent="true"
                                                     app:strokeColor="#000"
                                                     app:strokeWidth="1dp"
                                                     android:textColor="#fff"
                                                     android:gravity="center"
            />
</RelativeLayout>

<com.emrg.view.OutlinedTextView android:id="@+id/level"
                                                 android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                 android:background="@drawable/xp_star"
                                                 android:textColor="#1f5897"
                                                 android:textSize="18dp"
                                                 android:gravity="center"
                                                 android:drawingCacheQuality="high"
        />
</RelativeLayout>