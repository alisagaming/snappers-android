<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical"
        >
    <com.emerginggames.snappers.view.OutlinedTextView android:id="@+id/title" android:layout_width="fill_parent"
                                                     android:layout_height="wrap_content"
                                                     app:strokeWidth="1dp" app:strokeColor="#000"
                                                     app:setTextSizeToFit="true"
                                                     android:textColor="#fff"
                                                     android:textStyle="bold"
                                                     android:layout_gravity="center"
                                                     android:gravity="center"
                                                     android:visibility="gone"
            />
    <com.emerginggames.snappers.view.OutlinedTextView android:id="@+id/message" android:layout_width="wrap_content"
                                                     android:layout_height="wrap_content"
                                                     app:strokeWidth="1dp" app:strokeColor="#000"
                                                     android:textColor="#fff"
                                                     android:textStyle="bold"
                                                     android:layout_marginTop="3dp"
                                                     android:visibility="gone"
            />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:id="@+id/viewCont" android:orientation="vertical"
                  android:layout_marginBottom="10dp"
            />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="center" android:id="@+id/buttonCont" android:orientation="vertical"
                  android:paddingLeft="5dp" android:paddingRight="5dp"
            />
</LinearLayout>