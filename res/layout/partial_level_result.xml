<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:and="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.emerginggames.snappers"
                and:layout_width="fill_parent"
                and:layout_height="fill_parent"
                and:background="#80000000"
        >
    <RelativeLayout and:id="@+id/backCont" and:layout_width="fill_parent" and:layout_height="fill_parent" and:layout_centerInParent="true"/>
    <LinearLayout and:layout_width="fill_parent" and:layout_height="wrap_content" and:orientation="vertical"
            and:layout_centerInParent="true">
        <com.emrg.view.OutlinedTextView and:id="@+id/title"
                                                         and:layout_width="wrap_content" and:layout_height="wrap_content"
                                                         and:textColor="@android:color/white" and:layout_gravity="center"
                                                         app:strokeWidth="1dp" app:strokeColor="#000"/>
        <com.emrg.view.OutlinedTextView and:id="@+id/message"
                                                         and:layout_width="wrap_content" and:layout_height="wrap_content"
                                                         and:textColor="@android:color/white" and:layout_gravity="center"
                                                         app:strokeWidth="1dp" app:strokeColor="#000"/>
    </LinearLayout>
</RelativeLayout>
